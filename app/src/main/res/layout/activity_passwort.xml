<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.katharinafeiertag.mediary.passwortActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Passwort ändern"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tf_altesPasswort"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/tf_passwortneu"
        android:layout_below="@+id/textView"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="altes Passwort:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/tf_passwortneu"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/tf_passwortNeuWh"
        android:layout_below="@+id/tf_altesPasswort"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="neues Passwort:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/tf_passwortNeuWh"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tf_passwortneu"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Passwort wiederholen:"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="bestätigen"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
