<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.katharinafeiertag.mediary.MedikamentHinzufugenActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Neues Medikament hinzufügen"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/tf_handelsname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Handelsname:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_insertProfilimage" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="12dp"
        android:onClick="onAddClick"
        android:text="Speichern" />



<!--    <TextView
        android:id="@+id/tv_anzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_versuch"
        android:layout_marginBottom="15dp"
        android:hint="Prozess durchgeführt" />-->

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/lb_menge"
        android:layout_below="@+id/lb_menge"
        android:layout_marginTop="18dp"
        android:max="500" />

    <TextView
        android:id="@+id/lb_menge"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tf_handelsname"
        android:layout_below="@+id/tf_handelsname"
        android:layout_marginTop="22dp"
        android:textSize="18sp"
        tools:text="Mengenangabe:" />

<!--
    <TextView
        android:id="@+id/lb_art"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tv_wert"
        android:layout_below="@+id/tv_wert"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        tools:text="Mengenart:" />-->

    <TextView
        android:id="@+id/tv_wert"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/seekBar"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/tv_art"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tv_wert"
        android:layout_below="@+id/tv_wert"
        android:layout_marginTop="14dp"
        android:text="Mengenart:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tf_zulassungsnummer"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/tf_art"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Zulassungsnummer:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/tf_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_art"
        android:layout_below="@+id/tv_art"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Mengenart:"
        android:inputType="textPersonName" />

</RelativeLayout>
