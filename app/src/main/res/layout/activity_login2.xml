<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ourBackgroundColorLogin"
    tools:context="com.example.katharinafeiertag.mediary.LoginActivity">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tf_allergien"
        android:layout_alignParentStart="true"
        android:text="Benutzername:"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tf_allergien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_info2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tf_passwort"
        android:layout_alignParentStart="true"
        android:text="Passwort:"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tf_passwort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_login"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_info3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="106dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="anmelden"
        android:text="Anmelden"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_registrieren"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:autofillHints="@color/colorAccent"
        android:background="?android:attr/colorAccent"
        android:text="Sie sind noch nicht angemeldet?"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_registrieren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_fingerprint"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="71dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="registrieren"
        android:text="jetzt registrieren"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/iv_fingerprint"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/tf_fingerinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@mipmap/fingerprint_new" />

    <TextView
        android:id="@+id/tf_fingerinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Platzieren sie Ihren Finger am Scanner um sich einzuloggen"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

</RelativeLayout>
