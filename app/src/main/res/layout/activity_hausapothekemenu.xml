<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.katharinafeiertag.mediary.HausapothekeMenuActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:text="Optionen meiner digitale Hausapotheke"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/schrift"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/bt_einsicht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_medHinzufügen"
        android:layout_alignStart="@+id/bt_medHinzufügen"
        android:layout_below="@+id/textView"
        android:layout_marginTop="85dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onAlleClick"
        android:text="Einsicht in alle Medikamente"
        android:textColor="@color/backgroundColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_medHinzufügen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_einsicht"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onHinzufügenClick"
        android:text="Neue Mediakmente hinzufügen"
        android:textAlignment="center"
        android:textColor="@color/backgroundColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_medEinnahme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_einsicht"
        android:layout_alignStart="@+id/bt_medHinzufügen"
        android:layout_below="@+id/bt_medHinzufügen"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onEinnahmeClick"
        android:text="Medikament einnehmen"
        android:textAlignment="center"
        android:textColor="@color/backgroundColor"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
