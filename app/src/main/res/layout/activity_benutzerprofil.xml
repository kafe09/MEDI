<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.katharinafeiertag.mediary.BenutzerprofilActivity">

    <EditText
        android:id="@+id/tf_vn"
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:layout_below="@+id/iv_insertProfilimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Vorname:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_insertProfilimage" />

    <EditText
        android:id="@+id/tf_nm"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/tf_vn"
        android:layout_below="@+id/tf_vn"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Nachname:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_vn" />

    <EditText
        android:id="@+id/tf_mail"
        android:layout_width="306dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/tf_nm"
        android:layout_below="@+id/tf_nm"
        android:layout_marginTop="17dp"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:hint="E-Mail:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_nm" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="91dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/lb_geschlecht"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/female"
        app:layout_constraintTop_toBottomOf="@+id/tf_mail"
        tools:layout_editor_absoluteX="62dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="104dp"
        android:layout_height="79dp"
        android:layout_alignEnd="@+id/tf_mail"
        android:layout_alignTop="@+id/radioButton"
        android:drawableLeft="@drawable/male"
        app:layout_constraintTop_toBottomOf="@+id/tf_mail"
        tools:layout_editor_absoluteX="217dp" />

    <ImageView
        android:id="@+id/iv_insertProfilimage"
        android:layout_width="72dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="145dp" />

    <TextView
        android:id="@+id/lb_geschlecht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_anmelden"
        android:layout_alignStart="@+id/tf_passwort"
        android:text="Geschlecht:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tf_passwort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tf_vn"
        android:layout_alignStart="@+id/tf_mail"
        android:layout_below="@+id/tf_mail"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Passwort:"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_anmelden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lb_geschlecht"
        android:layout_alignParentBottom="true"
        android:text="Anmelden"
        android:onClick="onAnmeldenClick"/>

    <EditText
        android:id="@+id/tf_passwort2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioButton2"
        android:layout_alignStart="@+id/tf_passwort"
        android:layout_below="@+id/tf_passwort"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Confirm Passwort:"
        android:inputType="textPersonName" />

</RelativeLayout>
